<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageviewAlpha"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/iconandroid" />

    <ImageView
        android:id="@+id/imageviewScale"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@id/imageviewAlpha"
        android:src="@drawable/iconandroidscale" />

    <ImageView
        android:id="@+id/imageviewRotate"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:src="@drawable/iconbell" />
</RelativeLayout>